{
  "name": "sweetch-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start:users": "npm run dev -w users",
    "start:posts": "npm run dev -w posts",
    "start:all": "npm run start-users & npm run start-posts",

    "build:shared": "npm run build -w @sweetch/shared",
    "build:users": "npm run build:shared && npm run build -w @sweetch/users",
    "build:posts": "npm run build:shared && npm run build -w @sweetch/posts",
    "build:all": "npm run build:shared && npm run build:users && npm run build:posts",

    "test-all": "npm run test --workspaces",
    "install-all": "npm --workspaces install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "nodemon": "^3.1.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "jest-mock-axios": "^4.8.0",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "workspaces": [
    "services/shared",
    "services/users",
    "services/posts"
  ]
}
